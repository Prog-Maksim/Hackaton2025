            Width="300"
            Height="35"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Margin="0 10"
            Content="Добавить файл"
            Click="AddFileEnergy_OnClick"
            Style="{StaticResource ClickButtonStyle}">
            <Button.ToolTip>
                Файл с почасовыми данными
            </Button.ToolTip>
        </Button>

        <Button
            x:Name="AddFileConfig"
