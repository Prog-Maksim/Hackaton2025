<Page x:Class="report.AddFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:report"
      mc:Ignorable="d"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="AddFile" Height="800" Width="1300">
    <Grid Margin="10 0">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button
            Grid.Row="0"
            Width="150"
            Height="35"
            Background="Transparent"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="0 10"
            Style="{StaticResource ClickButtonStyle}">
            
            <Grid ShowGridLines="False">
            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="0.2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Rectangle
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Stroke="#6200EE" 
                    StrokeThickness="2" 
                    RadiusX="10" 
                    RadiusY="10"
                    Width="150"
                    Height="35"
                    StrokeDashArray="5,3">
                </Rectangle>
                
            </Grid>    
            
        </Button>
        
        <TextBlock
            Grid.Row="1"
            Text="Настройки"
            FontFamily="Montserrat"
            FontSize="20"
            FontWeight="Bold">
        </TextBlock>
        
        <StackPanel Grid.Row="2">
            <TextBlock
                Text="Ценовая категория 1">
            </TextBlock>
            
            <TextBlock
                Text="Выбор напряжения">
            </TextBlock>
            <ComboBox>
                <TextBlock>ВН</TextBlock>
                <TextBlock>СН1</TextBlock>
                <TextBlock>СН11</TextBlock>
                <TextBlock>НН</TextBlock>
            </ComboBox>
            
            <TextBlock
                Text="Стоимость данного напряжения (руб/квт.ч)">
            </TextBlock>
            <TextBox x:Name="TextBox1"></TextBox>
            
            <TextBlock
                Text="Стоимость при &lt; 670 квт.ч">
            </TextBlock>
            <TextBox x:Name="TextBox2"></TextBox>
            
            <TextBlock
                Text="Стоимость при &gt; 670 квт.ч &lt; 10 мвт.ч">
            </TextBlock>
            <TextBox x:Name="TextBox3"></TextBox>
            
            <TextBlock
                Text="Стоимость при &gt; 10 мвт.ч">
            </TextBlock>
            <TextBox x:Name="TextBox4"></TextBox>
            
        </StackPanel>
        
        <!-- Выбор напряжения -->
        <!-- Стоимость данного напряжения -->
        <!-- Стоимость при < 670 квт.ч -->
        <!-- Стоимость при > 670 квт.ч < 10 мвт.ч -->
        <!-- Стоимость при > 10 мвт.ч -->
        
        
        
        
    </Grid>
</Page>
